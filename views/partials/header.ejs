    <title>Pattern</title>
    
</head>

<body>
     <nav class="navbar navbar-dark bg-dark ">
        <div class="container d-flex">
            <a href="/" class="navbar-brand"><i class="fas fa-binoculars mr-2"></i> Pattern</a>
            <div class="float-right">
                <% if (!currentUser) {%>
                 <a href="/register" class="navbar-brand ml-auto p-2"><i class="far fa-grin mr-2"></i> Sign UP</a>
                 <a href="/login" class="navbar-brand ml-auto p-2"> Sign IN</a>
                 <%  } else {%>
                 <a href="#">Signed as: <span> <%=currentUser.username%></span></a>
                 <a href="/logout" class="navbar-brand ml-auto p-2"> LogOut</a>
                 <% } %>
            </div>
        </div>
    </nav>
    
    
    <div class="container">
        <% if (error && error.length>0){%>
            <div class="alert alert-danger" role="alert">
                   <%=error %>
            </div>
        <% } %>
        <% if ( success && success.length>0){%>
            <div class="alert alert-danger" role="alert">
                   <%=success %>
            </div>
        <% } %>
    </div>